<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color with transparency -->
    <solid android:color="#B3494747" />

    <!-- Rounded corners for the background -->
    <corners android:radius="16dp" />

    <!-- Gradient color for the shadow -->
    <gradient
        android:angle="90"
        android:endColor="#616161"
        android:startColor="#80616161"
        />
    <stroke android:width="1.5dp" android:color="@android:color/darker_gray"/>

</shape>
